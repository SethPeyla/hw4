<h1><%= @place["name"] %></h1>
  <p>
<% if @current_user %>
  <h2>My Posts</h2>
  </p>
  <div = class="row">
    <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <% if post.uploaded_image.attached?  %>
        <img src = "<%= url_for(post.uploaded_image) %>" class="img-fluid rounded float-start">
        <p><%= post["description"] %></p>
        <% else  %>
        <div class="mt-5"><p class ="mt-5 pt-5"><%= post["description"] %></p></div>
     <% end %>
    </div>
    <% end %>
  </div>

<% else  %>
  <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>
  <p>
    <a href="/places">Back to All Places</a>
  </p>
<% end  %>